<p id="notice"><%= notice %></p>

<h1>Issues</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Title</th>
      <th>Body</th>
      <th>Labels</th>
      <th>Html url</th>
      <th>State</th>
      <th>Locked</th>
      <th>Comments count</th>
      <th>Raw</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.number %></td>
        <td><%= issue.title %></td>
        <td><%= issue.body %></td>
        <td><%= issue.labels %></td>
        <td><%= issue.html_url %></td>
        <td><%= issue.state %></td>
        <td><%= issue.locked %></td>
        <td><%= issue.comments_count %></td>
        <td><%= issue.raw %></td>
        <td><%= link_to 'Show', issue %></td>
        <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
        <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Issue', new_issue_path %>
